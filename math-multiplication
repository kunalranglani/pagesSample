<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Worksheet</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 20px;
        }
        h1 {
            text-decoration: underline;
        }
        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        .problem {
            width: 100px;
            margin: 20px;
			margin-bottom:80px;
            font-size: 24px;
            text-align: right;
        }
        .problem div {
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <div id="problemsContainer" class="container"></div>
    <script>
        function generateRandomNumber(min, max) {
            return Math.floor(Math.random() * (max - min + 1)) + min;
        }

        function generateMathProblems(count) {
            let problems = [];
            for (let i = 0; i < count; i++) {
                let num1 = generateRandomNumber(0, 99);
                let num2 = generateRandomNumber(1, 9); // Ensure it's smaller for subtraction
                let operator = 'X';
                problems.push({ num1, num2, operator });
            }
            return problems;
        }

        function displayProblems() {
            let problems = generateMathProblems(20);
            let container = document.getElementById("problemsContainer");
            container.innerHTML = "";

            problems.forEach(problem => {
                let problemDiv = document.createElement("div");
                problemDiv.className = "problem";
                problemDiv.innerHTML = `
                    <div>&nbsp; ${problem.num1}</div>
                    <div>${problem.operator} ${problem.num2}</div>
                    <div>______</div>
                `;
                container.appendChild(problemDiv);
            });
        }

        document.addEventListener("DOMContentLoaded", displayProblems);
    </script>
</body>
</html>
