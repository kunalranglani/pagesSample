 <div id="problemsContainer" class="container"></div>

<script>
function generateQuestions() {
    const container = document.getElementById('questions');
    const operations = ['+', '-', '×'];

    for (let i = 0; i < 25; i++) {
        const operation = operations[Math.floor(Math.random() * operations.length)];
        let a, b;

        if (operation === '×') {
            a = Math.floor(Math.random() * 90) + 10; // 2-digit number
            b = Math.floor(Math.random() * 8) + 2;   // 1-digit number
        } else {
            a = Math.floor(Math.random() * 900) + 100; // 3-digit number
            b = Math.floor(Math.random() * 900) + 100; // 3-digit number

            // Sometimes make it 2-digit number for variety
            if (Math.random() < 0.4) {
                a = Math.floor(Math.random() * 90) + 10;
            }
            if (Math.random() < 0.4) {
                b = Math.floor(Math.random() * 90) + 10;
            }

            // For subtraction and addition, ensure first number is bigger than second
            if (operation !== 'x' && b > a) {
                [a, b] = [b, a];
            }
        }

		
		let container = document.getElementById("problemsContainer");

                let problemDiv = document.createElement("div");
                problemDiv.className = "problem";
                problemDiv.innerHTML = `
                    <div>&nbsp; ${a}</div>
                    <div>${operation} ${b}</div>
                    <div>______</div>
                `;
                container.appendChild(problemDiv);
    }
}

generateQuestions();
</script>

</body>
